<!-- res/drawable/bg_input_field.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Đặt màu nền -->
    <solid android:color="#FFFFFF" />

    <!-- Đặt viền cho trường nhập liệu -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Bo góc cho trường nhập liệu -->
    <corners android:radius="8dp" />

    <!-- Thiết lập padding nội bộ nếu cần -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
