<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_login.Forgot_pass"
    android:orientation="vertical"
    android:background="#172A5C"
    >
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="20dp"
        android:contentDescription="Back"
        android:padding="8dp"
        android:src="@drawable/back_icon" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_text"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="50dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/loginPromptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_text1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:hint="@string/email_hint"
            app:hintTextColor="@color/white"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_custtomedit"
                android:textColor="#FFFFFF"
                android:paddingLeft="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnsenemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_button"
            android:layout_margin="10dp"
            android:textColor="#13B48B"
            android:padding="12dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF" />
            />
    </LinearLayout>


</LinearLayout>