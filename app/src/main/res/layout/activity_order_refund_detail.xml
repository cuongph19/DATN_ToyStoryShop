<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        layout_above="@+id/checkoutLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <LinearLayout
            android:id="@+id/header"
            style="@style/SCREEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Back"
                android:padding="8dp"
                android:src="@drawable/back_icon_1" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/return_goods"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />
        <LinearLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_oder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="2"
                tools:listitem="@layout/item_oder" />

            <TextView
                android:id="@+id/show_more_oder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="16dp"
                android:text="Xem thêm"
                android:visibility="gone" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />


        <!-- Lý do trả hàng -->
        <Spinner
            android:id="@+id/spService"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/plan"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refund_return"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />
        <!-- Hoàn tiền -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="@string/refund_amount" />

        <TextView
            android:id="@+id/refund_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="0đ"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/refund_in"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_account"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />

        <!-- Mô tả -->
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Ghi chú thêm"
            android:gravity="top" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/email"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                android:id="@+id/tvemailrefund"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edt_email"
                android:textSize="16sp" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/checkoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/btnreturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:gravity="center"
            android:padding="15dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/return_goods"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>
