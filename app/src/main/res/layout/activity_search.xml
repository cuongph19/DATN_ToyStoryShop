<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search container with background color -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#172A5C"
        android:padding="8dp">

        <!-- Search header row with "Tìm kiếm", favorite, and cart icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- TextView for search title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tìm kiếm"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:gravity="center_vertical" />

            <!-- Favorite icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_favorite"
                android:padding="8dp" />

            <!-- Cart icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_cart"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Search bar with background color and rounded EditText -->
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#172A5C"
            android:padding="8dp">

            <!-- EditText with search icon inside -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background_rounded"
            android:hint="Tìm kiếm sản phẩm"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textColorHint="#808080"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <!-- Filter buttons under the search bar with icons and background color -->
    <LinearLayout
        android:id="@+id/filter_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#172A5C"
        android:padding="10dp">

        <!-- Button 1: Sort by -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_sort"
            android:text="Sort by"
            android:background="@drawable/button_background"
            android:textColor="#ffffff"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:gravity="start|center_vertical"
            android:compoundDrawablePadding="8dp" />

        <!-- Button 2: Location -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_location"
            android:text="Location"
            android:background="@drawable/button_background"
            android:textColor="#ffffff"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:gravity="start|center_vertical"
            android:compoundDrawablePadding="8dp" />

        <!-- Button 3: Category -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_category"
            android:text="Category"
            android:background="@drawable/button_background"
            android:textColor="#ffffff"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:gravity="start|center_vertical"
            android:compoundDrawablePadding="8dp" />
    </LinearLayout>



    <!-- Product list (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_product"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>
