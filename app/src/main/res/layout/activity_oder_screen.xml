
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    >

    <!-- Back Button and Title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back"
            android:src="@drawable/back_icon_1"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Thanh toán"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/line_separator1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/addressLayout"
        android:scaleType="centerCrop"
        app:tint="#CACACA"
        android:alpha="0.2"
        android:src="@drawable/ic_bgc"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:contentDescription="Separator"/>
    <!-- Delivery Address -->
    <LinearLayout
        android:id="@+id/addressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/line_separator1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            app:tint="#FF6E40" />
        <!-- Layout chứa thông tin địa chỉ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhận hàng"
                android:textColor="#FF6E40"
                android:drawablePadding="8dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trần Cương"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(+84) 382 200 084"
                    android:layout_marginEnd="10dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Địa chỉ chi tiết -->
            <TextView
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Nhà 3, Ngách 21/1 Ngõ 80 Xuân Phương, Phường Phương Canh, Quận Nam Từ Liêm, Hà Nội"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- ImageView căn chỉnh ở giữa theo chiều dọc -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:alpha="0.5"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line_separator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
    android:layout_below="@id/addressLayout"
    android:src="@drawable/ic_bgc"
    android:scaleType="centerCrop"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/addressLayout"
    android:contentDescription="Separator"/>
    <LinearLayout
        android:id="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/line_separator"
        android:padding="8dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_logo"
            android:scaleType="centerCrop"/>

        <!-- Thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vỏ bọc căn cước công dân CCCD - ATM"
                android:textSize="16sp"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Phân loại sản phẩm -->
            <TextView
                android:id="@+id/product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phân loại: Nhám"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"/>

            <!-- Giá sản phẩm -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫1.000"
                android:textSize="16sp"
                android:textColor="#FF0000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <!-- Số lượng sản phẩm -->
            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x3"
                android:textSize="16sp"
                android:textColor="#888888"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/product"
        android:background="#F5F5F5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/addressLayout"
            android:scaleType="centerCrop"
            app:tint="#00BEA5"
            android:alpha="0.2"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_bgc"
            android:contentDescription="Separator"/>
    <!-- Phương thức vận chuyển -->
    <TextView
        android:id="@+id/shipping_method_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Phương thức vận chuyển"
        android:textSize="14sp"
        android:textColor="#000000"
        android:paddingBottom="4dp"/>

    <!-- Tên phương thức và giá tiền -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical">

        <!-- Tên phương thức (ví dụ: Nhanh) -->
        <TextView
            android:id="@+id/shipping_method_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhanh"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Icon và giá tiền -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <!-- Icon vận chuyển -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_vocher" />

            <!-- Giá cũ (gạch ngang) -->
            <TextView
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫16.500"
                android:layout_marginStart="3dp"
                android:textSize="14sp"
                android:textColor="#888888" />

            <!-- Giá mới -->
            <TextView
                android:id="@+id/new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫6.500"
                android:textSize="16sp"
                android:textColor="#FF0000"
                android:layout_marginStart="4dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow"
                  android:layout_marginStart="5dp"
                android:alpha="0.5"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_car" />
    <!-- Thời gian nhận hàng -->
    <TextView
        android:id="@+id/estimated_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="Đảm bảo nhận hàng vào 12 Tháng 11"
        android:textSize="14sp"
        android:textColor="#00BFA5"
       />
</LinearLayout>
    <!-- Thông tin voucher -->
        <TextView
            android:id="@+id/voucher_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:text="Nhận Voucher trị giá ₫15.000 nếu đơn hàng được giao đến bạn sau ngày 12 Tháng 11 2024."
            android:textColor="#888888"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/addressLayout"
            android:scaleType="centerCrop"
            app:tint="#00BEA5"
            android:alpha="0.2"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_bgc"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:contentDescription="Separator"/>
    <!-- Được đồng kiểm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/inspection_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Được đồng kiểm"
            android:textSize="14sp"
            android:textColor="#000000"/>
        <!-- Icon thông tin đồng kiểm -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon3"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/addressLayout"
            android:scaleType="centerCrop"
            app:tint="#CACACA"
            android:alpha="0.2"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_bgc"
            android:contentDescription="Separator"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ship">

        <!-- Row for 'Lời nhắn cho Shop' -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lời nhắn cho Shop"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/tvLeaveMessage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Để lại lời nhắn"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/addressLayout"
            android:scaleType="centerCrop"
            app:tint="#CACACA"
            android:alpha="0.2"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_bgc"
            android:contentDescription="Separator"/>
        <!-- Row for 'Tổng số tiền' -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tvTotalAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số tiền (3 sản phẩm):"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫8.500"
                android:textColor="#FF5722"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@id/addressLayout"
            android:scaleType="centerCrop"
            app:tint="#CACACA"
            android:alpha="0.2"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_bgc"
            android:contentDescription="Separator"/>
        <!-- Row for 'Shopee Voucher' -->
        <RelativeLayout
            android:id="@+id/voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/ivVoucherIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_vocher" />

            <TextView
                android:id="@+id/tvVoucherLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ivVoucherIcon"
                android:text="Shopee Voucher"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvFreeShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_free_shipping"
                android:padding="4dp"
                android:text="Miễn Phí Vận Chuyển"
                android:textColor="#00C853"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@id/addressLayout"
            android:scaleType="centerCrop"
            app:tint="#CACACA"
            android:alpha="0.2"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_bgc"
            android:contentDescription="Separator"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/shop"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical">

            <!-- Icon phương thức thanh toán -->
            <ImageView
                android:id="@+id/ivPaymentIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_xu" />

            <!-- Text phương thức thanh toán -->
            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Phương thức thanh toán"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                android:id="@+id/tvPaymentDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận hàng"
                android:textColor="#888888"
                android:textSize="16sp" />

            <!-- Mũi tên chỉ hướng -->
            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:alpha="0.5"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@id/addressLayout"
            android:scaleType="centerCrop"
            app:tint="#CACACA"
            android:alpha="0.2"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_bgc"
            android:contentDescription="Separator"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:background="#FFFFFF">

            <!-- Payment Details Title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/ivDetailIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_order_history"/>

                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ivDetailIcon"
                    android:layout_marginStart="8dp"
                    android:text="Chi tiết thanh toán"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <!-- Payment Details Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="32dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền hàng"
                    android:layout_weight="1"
                    android:textColor="#888888"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền phí vận chuyển"
                    android:layout_weight="1"
                    android:textColor="#888888"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/shipping_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/shipDiscounttv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm giá phí vận chuyển"
                    android:layout_weight="1"
                    android:textColor="#888888"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/shipDiscountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/productDiscounttv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng cộng Voucher giảm giá"
                    android:layout_weight="1"
                    android:textColor="#888888"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/productDiscountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="16sp"
                 />

                <TextView
                    android:id="@+id/money_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="#FF5722"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@id/addressLayout"
                android:scaleType="centerCrop"
                app:tint="#CACACA"
                android:alpha="0.2"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_bgc"
                android:contentDescription="Separator"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Icon hóa đơn -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bill"
                    android:layout_marginEnd="8dp" />

                <!-- Text thông báo -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nhấn 'Đặt hàng' đồng nghĩa với việc bạn đồng ý tuân theo"
                    android:textColor="#888888"
                    android:textSize="14sp" />

