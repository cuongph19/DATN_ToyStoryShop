<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/back_icon_1" />
        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvIntroduce"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal"
            android:text="@string/intro_rewards_int"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Ảnh hoặc banner quảng cáo -->
    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:background="#001A61"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_google" /> <!-- Nền banner có màu chủ đạo -->

    <!-- Mã giới thiệu -->
    <TextView
        android:id="@+id/tvReferralCodeLabel"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/share_referral_code_int"
        android:textSize="18sp" /> <!-- Màu chủ đạo -->

    <TextView
        android:id="@+id/tvReferralCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="#001A61"
        android:padding="8dp"
        android:text="TOYSTORY123"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Hướng dẫn chia sẻ -->
    <TextView
        android:id="@+id/tvInstructions"
        style="@style/TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/steps_to_get_rewards_int"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvStep1"
        style="@style/TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/step_1_int"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvStep2"
        style="@style/TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/step_2_int"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvStep3"
        style="@style/TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/step_3_int"
        android:textSize="16sp" />

    <!-- Nút chia sẻ -->
    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#001A61"
        android:text="@string/share_button_int"
        android:textColor="@color/white" />

</LinearLayout>
