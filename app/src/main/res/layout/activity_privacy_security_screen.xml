<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

    <ImageView
        android:id="@+id/btnBack_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:contentDescription="Back"
        android:padding="8dp"
        android:src="@drawable/back_icon_1"/>

    <!-- Tiêu đề màn hình -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_security_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#001A61"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_weight="1"
        android:padding="10dp">
    <!-- Nội dung điều khoản bảo mật -->
    <TextView
        android:id="@+id/tvPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#001A61"
        android:textSize="16sp" />
    </ScrollView>
    <!-- CheckBox Đồng ý điều khoản -->
    <CheckBox
        android:id="@+id/checkbox_agree_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_agree"
        android:textColor="#001A61"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"/>

    <!-- Nút Accept -->
    <Button
        android:id="@+id/btn_accept_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accept_button_ter"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#888888"
        android:textColor="#FFFFFF"/>
</LinearLayout>
