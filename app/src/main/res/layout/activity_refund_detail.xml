<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        layout_above="@+id/checkoutLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            style="@style/SCREEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Back"
                android:padding="8dp"
                android:src="@drawable/back_icon_1" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/return_goods_detail"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <!-- Circle 1 -->
            <View
                android:id="@+id/view_circle_1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="20dp"
                android:alpha="0.4"
                android:background="@drawable/circle_filled" />

            <!-- Line 1 -->
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="8dp" />

            <!-- Circle 2 -->
            <View
                android:id="@+id/view_circle_2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:alpha="0.4"
                android:background="@drawable/circle_filled" /> />

            <!-- Line 2 -->
            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="8dp" />

            <!-- Circle 3 -->
            <View
                android:id="@+id/view_circle_3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="20dp"
                android:alpha="0.4"
                android:background="@drawable/circle_filled" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <!-- Text 1 -->
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:text="@string/waiting_for_confirmation"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />

            <!-- Spacer for Line 1 -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Text 2 -->
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmed"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />

            <!-- Spacer for Line 2 -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Text 3 -->
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/received_complete_goods"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />

            <!-- Spacer for Line 3 -->

        </LinearLayout>

        <!-- Item -->
        <LinearLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_refund"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="2"
                tools:listitem="@layout/item_oder" />

            <TextView
                android:id="@+id/show_more_oder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="16dp"
                android:text="Xem thêm"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/refund_amount"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                android:id="@+id/refund_amount"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/refund_in"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bank_account"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/requestednow"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                android:id="@+id/date_refund"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ngày giờ"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/return_request_code"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                android:id="@+id/refundID"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="refundID"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <!-- Text phương thức thanh toán -->
            <TextView
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/reason_for_return"
                android:textSize="16sp" />

            <!-- Chi tiết phương thức thanh toán -->
            <TextView
                android:id="@+id/reason_for_return"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refund_return"
                android:textSize="16sp" />

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/btnOrder_details"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/order_details"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/btnCancel_request"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/cancel_request"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/addressLayout"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:contentDescription="Separator"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bgc"
            app:tint="#CACACA" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/checkoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/btnDiscuss_further"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:gravity="center"
            android:padding="15dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/discuss_further"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>
