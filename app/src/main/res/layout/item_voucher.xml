<!-- res/layout/item_voucher.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/bg_voucher_item"
    android:layout_marginBottom="8dp">

    <!-- Icon Voucher (Bên trái) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:background="#00A78E"> <!-- Màu nền cho icon -->

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_logo" />


    </LinearLayout>

    <!-- Thông tin Voucher (Bên phải) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Label số lượng có hạn -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng có hạn"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_limited_stock_label"
            android:padding="2dp"
            android:layout_marginBottom="4dp" />

        <!-- Mô tả Voucher -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm tối đa đ300k"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Đơn hàng tối thiểu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn tối thiểu đ0"
            android:textSize="12sp"
            android:textColor="#888888" />

    </LinearLayout>
    <!-- Dấu kiểm tra (Checkmark) -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_checkmark"
        android:layout_gravity="center_vertical" />


</LinearLayout>
