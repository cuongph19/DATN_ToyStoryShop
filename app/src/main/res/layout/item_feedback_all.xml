<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/GB"
    android:orientation="vertical"
   >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addressLayout"
        android:layout_marginTop="3dp"
        android:alpha="0.2"
        android:contentDescription="Separator"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bgc"
        app:tint="#5D5D5D" />
    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/name_pro"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edRemainingDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/product_review"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_orange_background"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/feedback_order_his"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Thanh đánh giá -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvfeedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/product_review"
            android:textColor="@android:color/black" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="0"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:stepSize="1.0" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addressLayout"
        android:layout_marginTop="3dp"
        android:alpha="0.2"
        android:contentDescription="Separator"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bgc"
        app:tint="#5D5D5D" />
</LinearLayout>
