<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_border"
    android:elevation="4dp">

    <!-- Phần Hình ảnh và Nội dung Bài viết -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <!-- Phần Hình ảnh -->
        <ImageView
            android:id="@+id/articleImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo" /> <!-- Đặt hình ảnh mẫu tại đây -->

        <!-- Phần Nội dung Bài viết -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/articleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuộc đua sức mạnh:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Mô tả ngắn -->
            <TextView
                android:id="@+id/articleDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zzzzzzzzzzzzzzzzz"
                android:textColor="#555555"
                android:textSize="14sp"
                android:paddingTop="4dp" />

            <!-- Phần tác giả và thời gian -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <!-- Tên tác giả -->
                <TextView
                    android:id="@+id/articleAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wibu của Hobiverse"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <!-- Thời gian -->
                <TextView
                    android:id="@+id/articleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07/11/2024"
                    android:textColor="#777777"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Phần Nội dung -->
            <TextView
                android:id="@+id/articleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:lines="2"
                android:text="Nội dung chi tiết của "
                android:textColor="#333333"
                android:textSize="14sp"
                android:paddingTop="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
