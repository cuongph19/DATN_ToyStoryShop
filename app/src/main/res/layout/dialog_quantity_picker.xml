<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:background="#FFFFFF"
>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp">
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo" /> <!-- Thay hình ảnh sản phẩm của bạn ở đây -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Có giá bán buôn, bán sỉ"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_pro"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đ500 đ1,000"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="4dp" />

        <Spinner
            android:id="@+id/colorSpinnerdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/productStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kho: 5794"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <!-- TextView hiển thị "Số lượng" với khoảng cách 10dp từ cạnh trái -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="80dp" />

        <!-- Layout chứa các nút và số lượng, với khoảng cách 10dp từ cạnh phải -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/btnDecrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="-"
                android:background="#EEEEEE"
                android:textColor="#333333"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/btnIncrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+"
                android:background="#EEEEEE"
                android:textColor="#333333"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fff"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white" />

</LinearLayout>
