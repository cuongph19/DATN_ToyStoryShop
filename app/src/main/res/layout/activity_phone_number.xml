<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#172A5C"
    android:gravity="center"
    android:weightSum="1">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:contentDescription="Back"
        android:padding="8dp"
        android:src="@drawable/back_icon" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your phone number"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <!-- Nội dung hướng dẫn -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent you an SMS with a code to enter number"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Ô nhập số điện thoại với mã quốc gia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/phone_input_background"
    android:padding="8dp"
    android:layout_marginBottom="24dp">

    <!-- Dropdown cho mã quốc gia -->
    <Spinner
        android:id="@+id/spinnerCountryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:entries="@array/country_codes"
    android:popupBackground="#172A5C"
    android:textColor="#FFFFFF"
    android:layout_gravity="center_vertical"
    android:paddingRight="8dp" />

    <!-- Ô nhập số điện thoại -->
    <EditText
        android:id="@+id/edtPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="9876543210"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0BEC5"
        android:background="@android:color/transparent"
        android:inputType="phone"
        android:textSize="18sp"
        android:paddingLeft="8dp" />
</LinearLayout>

    <!-- Nội dung login bằng Social -->
<TextView
android:id="@+id/tvLoginWithSocial"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Or login with Social network"
android:textColor="#B0BEC5"
android:textSize="14sp"
android:gravity="center"
android:layout_marginBottom="24dp" />

    <!-- Nút Next -->
<Button
android:id="@+id/btnNext"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Next"
android:textColor="#13B48B"
android:backgroundTint="#FFFFFF"
android:padding="12dp"
android:layout_gravity="center" />
    </LinearLayout>
