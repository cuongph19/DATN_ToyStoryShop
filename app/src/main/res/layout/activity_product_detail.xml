<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_detail">
    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/back_icon_1" />

        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/info_pro"
            android:textSize="24sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/heart_icon1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:gravity="center_horizontal"
            android:contentDescription="Heart Icon"
            android:src="@drawable/ic_heart"
            app:tint="@color/gray" />

        <RelativeLayout
            android:id="@+id/cart_full_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical">

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cart"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:gravity="center_horizontal"
                android:contentDescription="Cart Icon"
                app:tint="@color/gray" />

            <View
                android:id="@+id/notification_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignTop="@id/cart_icon"
                android:layout_alignEnd="@id/cart_icon"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/notification_dot"
                />
        </RelativeLayout>
    </LinearLayout>

    <!-- ScrollView cho nội dung cuộn -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topLinearLayout"
        app:layout_constraintBottom_toTopOf="@id/cartSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nội dung cuộn của bạn ở đây -->
            <!-- Nút quay lại (Back Button) -->

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/robo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Nút chia sẻ (Share Button) -->
            <ImageView
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@android:color/white" />


            <LinearLayout
                android:id="@+id/dotIndicatorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/productImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productImage">

                <!-- Dot Indicator 1 -->
                <View
                    android:id="@+id/view_detail_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_active" />

                <!-- Dot Indicator 2 -->
                <View
                    android:id="@+id/view_detail_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_inactive" />

                <!-- Dot Indicator 3 -->
                <View
                    android:id="@+id/view_detail_3"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_inactive" />
            </LinearLayout>
            <!-- Product Title -->
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/name_pro"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productImage" />

            <!-- Product Price -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="649.000đ"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/productTitle"
                app:layout_constraintTop_toBottomOf="@id/productTitle" />

            <!-- Like Icon -->
            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:contentDescription="Heart Icon"
                android:src="@drawable/ic_heart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/productPrice"
                app:tint="#A09595" />

            <!-- Product Brand and SKU -->

            <!-- LinearLayout chứa TextView cho Thương hiệu và SKU -->
            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productPrice">

                <!-- Thương hiệu: -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- TextView cho nhãn Thương hiệu -->
                    <TextView
                        android:id="@+id/labelBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brand"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- TextView cho giá trị Thương hiệu -->
                    <TextView
                        android:id="@+id/productBrandValue1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Gundam"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Product Details -->
            <LinearLayout
                android:id="@+id/productDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ln1">

                <!-- Item 1: Nhận hàng nhanh chóng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon4"
                        app:tint="#172A5C" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Nhận hàng nhanh chóng (không tính T7 - CN)"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Item 2: Hobiverse phân phối -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon3"
                            app:tint="#172A5C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="ToyStory Shop phân phối chính hãng từ thương hiệu "
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/productBrandValue2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:text="52TOYS"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Item 3: Miễn phí giao hàng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon1"
                        app:tint="#172A5C" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Miễn phí giao hàng toàn quốc đơn trên 500k"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Item 4: Lưu ý về hoàn đổi trả -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="***Lưu ý: Sản phẩm được hoàn/đổi trong vòng 3 ngày sau khi nhận hàng, nếu là lỗi do nhà sản xuất và phải có video khui mở kiện hàng."
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="13sp" />

                <!-- Item 5: Số lượng tồn kho -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Sắp hết hàng: Còn "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/productStockValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" sản phẩm"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- Details Section -->
            <TextView
                android:id="@+id/detailsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Details"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productDetailsLayout" />

            <!-- Product Description -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="aa "
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailsHeader" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  <!-- Add to Cart Section -->
    <!-- Updated layout with dialog_quantity_picker.xml content -->
    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/cartSection"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Chat Icon Section with Border -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/border">

                <LinearLayout
                    android:id="@+id/chatIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#009688"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_logo" />
                </LinearLayout>
            </FrameLayout>

            <!-- Cart Icon Section with Border -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/border">

                <LinearLayout
                    android:id="@+id/cartIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#009688"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_cart" />
                </LinearLayout>
            </FrameLayout>

            <!-- Voucher Button Section with Border -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/border">

                <LinearLayout
                    android:id="@+id/voucherText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#FF5722"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua với voucher"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/voucherAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₫0"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
