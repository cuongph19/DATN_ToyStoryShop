<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Product"
            android:padding="12dp"
            android:background="@drawable/search_background"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:textSize="16sp"
            android:inputType="text"
            android:textColorHint="@android:color/darker_gray"
           />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/product_grid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:alignmentMode="alignMargins"
        app:columnCount="3"
        app:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/view_pager"
        >

        <!-- New Arrivals -->
        <LinearLayout
            android:id="@+id/new_arrivals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_logo"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW ARRIVALS"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Blind Box -->
        <LinearLayout
            android:id="@+id/blind_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_logo"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLIND BOX"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Figuring -->
        <LinearLayout
            android:id="@+id/figuring"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_logo"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIGURINE"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Other Products -->
        <LinearLayout
            android:id="@+id/other_products"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_logo"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTHER PRODUCTS"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Art Story -->
        <LinearLayout
            android:id="@+id/art_story"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_logo"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ART STORY"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Limited Figure -->
        <LinearLayout
            android:id="@+id/limited_figure"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_logo"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIMITED FIGURE"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/new_product_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/product_grid">

        <TextView
            android:id="@+id/tv_new_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Product"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_see_all_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary" />
    </LinearLayout>

    <!-- RecyclerView for product list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNewProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_product_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/popular_product_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewNewProducts">

        <TextView
            android:id="@+id/tv_popular_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Popular Product"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_see_all_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary" />
    </LinearLayout>

    <!-- RecyclerView for product list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewpopularProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/popular_product_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
